<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daftar Menu - Norin Cafe</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .fade-in { animation: fadeIn 0.8s ease-out; }
    @keyframes fadeIn { from{opacity:0;transform:translateY(30px)} to{opacity:1;transform:translateY(0)} }

    .sidebar-gradient {
      background: linear-gradient(135deg, #1f2937 0%, #374151 50%, #4b5563 100%);
    }
    .menu-item {
      position: relative;
      overflow: hidden;
    }
    .menu-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
      transition: left 0.5s;
    }
    .menu-item:hover::before {
      left: 100%;
    }
    .profile-glow {
      box-shadow: 0 0 30px rgba(249, 115, 22, 0.3);
      animation: pulse-glow 2s infinite;
    }
    @keyframes pulse-glow {
      0%, 100% { box-shadow: 0 0 30px rgba(249, 115, 22, 0.3); }
      50% { box-shadow: 0 0 40px rgba(249, 115, 22, 0.5); }
    }
    .glass-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-100 via-orange-50 to-red-50 text-gray-800 min-h-screen flex">

  <!-- Sidebar -->
  <aside class="w-64 sidebar-gradient text-white flex flex-col justify-between shadow-2xl relative overflow-hidden">
    <!-- Background Decoration -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-orange-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-red-500/10 rounded-full blur-2xl"></div>
    
    <div class="relative z-10 p-6">
      <!-- Brand Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-orange-400 to-red-600 rounded-2xl mb-4 shadow-xl">
          <i class="fas fa-utensils text-white text-2xl"></i>
        </div>
        <h1 class="text-xl font-bold bg-gradient-to-r from-orange-300 to-red-300 bg-clip-text text-transparent">
          Norin Cafe
        </h1>
      </div>

      <!-- Admin Profile -->
      <div class="glass-card rounded-2xl p-4 mb-8">
        <div class="flex flex-col items-center">
          <div class="w-24 h-24 rounded-full bg-gradient-to-br from-orange-400 to-red-500 profile-glow flex items-center justify-center">
            <i class="fas fa-user-tie text-white text-2xl"></i>
          </div>
          <p class="font-semibold mt-3 text-lg">Admin</p>
          <div class="mt-1 inline-flex items-center space-x-2 text-xs">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span class="text-green-300">Online</span>
          </div>
        </div>
      </div>

      <!-- Menu -->
      <nav class="flex flex-col space-y-4">
        <a href="#" class="menu-item bg-gradient-to-r from-orange-500 to-red-600 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3">
          <i class="fas fa-chart-pie text-lg"></i>
          <span>Dashboard</span>
        </a>
        <a href="/menu" class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3">
          <i class="fas fa-utensils text-lg"></i>
          <span>Kelola Menu</span>
        </a>
        <a href="#" class="menu-item bg-white/10 text-white font-semibold px-4 py-3 rounded-xl flex items-center space-x-3">
          <i class="fas fa-shopping-cart text-lg"></i>
          <span>Pesanan</span>
        </a>
      </nav>
    </div>

    <!-- Logout -->
    <div class="relative z-10 p-6">
      <a href="#" class="block w-full text-center bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold px-4 py-3 rounded-xl flex items-center justify-center space-x-3">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
      <div class="text-center mt-4 text-xs text-gray-400">
        <p>&copy; 2024 Norin Cafe System</p>
      </div>
    </div>
  </aside>

  <!-- Main Content Area -->
  <main class="flex-1 p-8">
    <!-- Logo -->
    <div class="text-center mb-8 fade-in">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-orange-400 to-red-600 rounded-full mb-4 shadow-2xl">
        <i class="fas fa-utensils text-white text-2xl"></i>
      </div>
      <h1 class="text-3xl font-bold text-black mb-2">Norin Cafe</h1>
      <p class="text-black/80 font-bold text-sm">Daftar menu</p>
    </div>

    <!-- Card -->
    <div class="bg-white w-full max-w-6xl rounded-2xl shadow-2xl p-8 fade-in">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center">
          <i class="fas fa-list mr-3 text-orange-500"></i> Daftar Menu
        </h2>
        <a href="/menu/add" class="px-4 py-2 bg-gradient-to-r from-orange-500 to-red-600 text-white rounded-lg font-semibold shadow hover:shadow-xl">
          <i class="fas fa-plus mr-1"></i> Tambah Menu
        </a>
      </div>

      <!-- Tabel Menu Static -->
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-gradient-to-r from-orange-400 to-red-500 text-white">
              <th class="p-3 rounded-tl-xl">#</th>
              <th class="p-3">Nama Menu</th>
              <th class="p-3">Kategori</th>
              <th class="p-3">Harga</th>
              <th class="p-3">Deskripsi</th>
              <th class="p-3">Status</th>
              <th class="p-3 text-center rounded-tr-xl">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b hover:bg-orange-50 transition">
              <td class="p-3">1</td>
              <td class="p-3 font-semibold">Nasi Goreng Spesial</td>
              <td class="p-3">Makanan</td>
              <td class="p-3">Rp 25.000</td>
              <td class="p-3 text-sm text-gray-600">Nasi goreng dengan ayam, telur, dan kerupuk</td>
              <td class="p-3">
                <span class="px-2 py-1 text-xs rounded bg-green-100 text-green-700">Tersedia</span>
              </td>
              <td class="p-3 text-center">
                <a href="/menu/edit/1" class="px-3 py-1 bg-yellow-400 text-white rounded-lg shadow hover:bg-yellow-500">
                  <i class="fas fa-edit"></i>
                </a>
                <a href="/menu/delete/1" onclick="return confirm('Yakin ingin menghapus?')" class="px-3 py-1 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 ml-2">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <tr class="border-b hover:bg-orange-50 transition">
              <td class="p-3">2</td>
              <td class="p-3 font-semibold">Es Teh Manis</td>
              <td class="p-3">Minuman</td>
              <td class="p-3">Rp 8.000</td>
              <td class="p-3 text-sm text-gray-600">Teh segar dengan gula, disajikan dingin</td>
              <td class="p-3">
                <span class="px-2 py-1 text-xs rounded bg-green-100 text-green-700">Tersedia</span>
              </td>
              <td class="p-3 text-center">
                <a href="/menu/edit/2" class="px-3 py-1 bg-yellow-400 text-white rounded-lg shadow hover:bg-yellow-500">
                  <i class="fas fa-edit"></i>
                </a>
                <a href="/menu/delete/2" onclick="return confirm('Yakin ingin menghapus?')" class="px-3 py-1 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 ml-2">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
            <tr class="border-b hover:bg-orange-50 transition">
              <td class="p-3">3</td>
              <td class="p-3 font-semibold">Cappuccino</td>
              <td class="p-3">Minuman</td>
              <td class="p-3">Rp 18.000</td>
              <td class="p-3 text-sm text-gray-600">Kopi susu dengan foam creamy</td>
              <td class="p-3">
                <span class="px-2 py-1 text-xs rounded bg-red-100 text-red-700">Habis</span>
              </td>
              <td class="p-3 text-center">
                <a href="/menu/edit/3" class="px-3 py-1 bg-yellow-400 text-white rounded-lg shadow hover:bg-yellow-500">
                  <i class="fas fa-edit"></i>
                </a>
                <a href="/menu/delete/3" onclick="return confirm('Yakin ingin menghapus?')" class="px-3 py-1 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 ml-2">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
